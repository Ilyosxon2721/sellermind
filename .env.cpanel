# SellerMind AI - cPanel Production Environment
# Скопируйте этот файл в .env на сервере и заполните ваши значения

#------------------------------------------------------------------------------
# APPLICATION SETTINGS
#------------------------------------------------------------------------------
APP_NAME=SellerMind
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

APP_LOCALE=ru
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ru_RU

APP_MAINTENANCE_DRIVER=file

#------------------------------------------------------------------------------
# SECURITY
#------------------------------------------------------------------------------
BCRYPT_ROUNDS=12

#------------------------------------------------------------------------------
# LOGGING
#------------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

#------------------------------------------------------------------------------
# DATABASE (MySQL/MariaDB)
# ВАЖНО: В cPanel имя БД обычно имеет формат: username_dbname
#------------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=username_sellermind
DB_USERNAME=username_seller
DB_PASSWORD=your_secure_password

#------------------------------------------------------------------------------
# SESSION, CACHE, QUEUE
# ВАЖНО: Если Redis недоступен, используйте database для queue и file для cache
#------------------------------------------------------------------------------
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Если Redis доступен, используйте redis, иначе database
QUEUE_CONNECTION=database

# Если Redis доступен, используйте redis, иначе file
CACHE_STORE=file

#------------------------------------------------------------------------------
# REDIS (только если доступен на вашем хостинге)
#------------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#------------------------------------------------------------------------------
# MAIL (Configure for notifications)
#------------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp.yandex.ru
MAIL_PORT=587
MAIL_USERNAME=noreply@your-domain.com
MAIL_PASSWORD=your_mail_password
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

#------------------------------------------------------------------------------
# OPENAI / AI INTEGRATION
#------------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_TEXT_MODEL=gpt-4o-mini
OPENAI_TEXT_PREMIUM_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o
OPENAI_IMAGE_MODEL=dall-e-3
OPENAI_AGENT_MODEL=gpt-4o-mini
OPENAI_AGENT_TIMEOUT=120
OPENAI_AGENT_MAX_TOKENS=4096
OPENAI_AGENT_TEMPERATURE=0.7

#------------------------------------------------------------------------------
# TELEGRAM BOT
#------------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook
TELEGRAM_BOT_USERNAME=SellerMindAI_bot

#------------------------------------------------------------------------------
# MARKETPLACE: WILDBERRIES
#------------------------------------------------------------------------------
WB_API_BASE_URL=https://marketplace-api.wildberries.ru
WB_CONTENT_URL=https://content-api.wildberries.ru
WB_STATISTICS_URL=https://statistics-api.wildberries.ru
WB_DISCOUNTS_PRICES_URL=https://discounts-prices-api.wildberries.ru

#------------------------------------------------------------------------------
# MARKETPLACE: OZON
#------------------------------------------------------------------------------
OZON_API_BASE_URL=https://api-seller.ozon.ru

#------------------------------------------------------------------------------
# MARKETPLACE: UZUM
#------------------------------------------------------------------------------
UZUM_API_BASE_URL=https://api-seller.uzum.uz/api/seller-openapi

#------------------------------------------------------------------------------
# MARKETPLACE: YANDEX MARKET
#------------------------------------------------------------------------------
YANDEX_MARKET_API_BASE_URL=https://api.partner.market.yandex.ru

#------------------------------------------------------------------------------
# MARKETPLACE SYNC SETTINGS
#------------------------------------------------------------------------------
MARKETPLACE_SYNC_INTERVAL=60
MARKETPLACE_SYNC_BATCH_SIZE=100
MARKETPLACE_SYNC_RETRY_ATTEMPTS=3
MARKETPLACE_SYNC_RETRY_DELAY=60

#------------------------------------------------------------------------------
# LARAVEL REVERB (WebSockets) - может не работать в cPanel
#------------------------------------------------------------------------------
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

#------------------------------------------------------------------------------
# VITE (Frontend)
#------------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"

#------------------------------------------------------------------------------
# FEATURE FLAGS
#------------------------------------------------------------------------------
BILLING_ENABLED=false
TELEGRAM_BOT_ENABLED=false
VPC_ENABLED=false

#------------------------------------------------------------------------------
# AWS (Optional, for file storage)
#------------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
