@extends('layouts.app')

@section('content')
<div x-data="{
         orders: [],
         stats: null,
         loading: true,
         selectedOrder: null,
         showOrderModal: false,
         showRaw: false,
         activeTab: 'new',
         deliveryTypeFilter: 'fbs', // fbs, dbs, edbs
         statusFilter: '',
         loadImages: true,
         dateFrom: '',
         dateTo: '',
         searchQuery: '',
         expandedSupplies: {},
         wsConnected: false,
         wsConnection: null,
         wsSocketId: null,
         syncInProgress: false,
         syncProgress: 0,
         syncMessage: '',
         syncStatus: '',
         liveMonitoringEnabled: false,
         liveMonitoringActive: false,
         lastDataChange: null,
         dataChangeNotifications: [],
         getToken() {
             if (this.$store.auth.token) return this.$store.auth.token;
             const persistToken = localStorage.getItem('_x_auth_token');
             if (persistToken) {
                 try { return JSON.parse(persistToken); } catch (e) { return persistToken; }
             }
             return localStorage.getItem('auth_token') || localStorage.getItem('token');
         },
         getAuthHeaders() {
             return {
                 'Authorization': 'Bearer ' + this.getToken(),
                 'Accept': 'application/json'
            };
         },
         async init() {
             await this.$nextTick();
             if (!this.getToken()) {
                 window.location.href = '/login';
                 return;
             }
             // Set default date range (last 7 days)
             const today = new Date();
             const weekAgo = new Date(today.getTime() - 7 * 24 * 60 * 60 * 1000);
             this.dateTo = today.toISOString().split('T')[0];
             this.dateFrom = weekAgo.toISOString().split('T')[0];

             await this.loadOrders();
             await this.loadStats();

             // –ü–æ–¥–∫–ª—é—á–∞–µ–º—Å—è –∫ WebSocket –¥–ª—è real-time –æ–±–Ω–æ–≤–ª–µ–Ω–∏–π
             this.connectWebSocket();
         },
         async subscribeToChannel(channelName) {
             const socketId = this.wsSocketId;
             if (!socketId) {
                 console.error('No socket ID available');
                 return;
             }

             try {
                 // Get auth signature from Laravel
                 const response = await fetch('/api/broadcasting/auth', {
                     method: 'POST',
                     headers: {
                         ...this.getAuthHeaders(),
                         'Content-Type': 'application/json'
                     },
                     body: JSON.stringify({
                         socket_id: socketId,
                         channel_name: channelName
                     })
                 });

                 const authData = await response.json();

                 // Subscribe to channel with auth
                 this.wsConnection.send(JSON.stringify({
                     event: 'pusher:subscribe',
                     data: {
                         channel: channelName,
                         auth: authData.auth
                     }
                 }));

                 console.log(`‚úÖ Subscribed to ${channelName}`);
             } catch (error) {
                 console.error(`Failed to subscribe to ${channelName}:`, error);
             }
         },
         connectWebSocket() {
             const companyId = this.$store.auth.currentCompany.id;
             const accountId = {{ $accountId }};

             // Reverb WebSocket endpoint
             const wsUrl = `ws://localhost:8080/app/local-reverb-key?protocol=7&client=js&version=8.4.0-rc2&flash=false`;

             try {
                 this.wsConnection = new WebSocket(wsUrl);

                 this.wsConnection.onopen = () => {
                     console.log('‚úÖ WebSocket connected');
                     this.wsConnected = true;
                 };

                 this.wsConnection.onmessage = (event) => {
                     const data = JSON.parse(event.data);

                     // –ü–æ–ª—É—á–∞–µ–º socket ID –ø—Ä–∏ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–∏
                     if (data.event === 'pusher:connection_established') {
                         const connectionData = JSON.parse(data.data);
                         this.wsSocketId = connectionData.socket_id;
                         console.log('Socket ID:', this.wsSocketId);

                         // –ü–æ–¥–ø–∏—Å—ã–≤–∞–µ–º—Å—è –Ω–∞ –∫–∞–Ω–∞–ª—ã –ø–æ—Å–ª–µ –ø–æ–ª—É—á–µ–Ω–∏—è socket ID
                         const companyId = this.$store.auth.currentCompany.id;
                         const accountId = {{ $accountId }};
                         this.subscribeToChannel(`company.${companyId}.marketplace.${accountId}.orders`);
                         this.subscribeToChannel(`company.${companyId}.marketplace.${accountId}.sync`);
                         this.subscribeToChannel(`company.${companyId}.marketplace.${accountId}.data`);
                     }

                     // –û–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ–º —Å–æ–±—ã—Ç–∏–µ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –∑–∞–∫–∞–∑–æ–≤
                     if (data.event === 'orders.updated') {
                         console.log('üì¶ Orders updated:', data.data);

                         // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –ø–µ—Ä–µ–∑–∞–≥—Ä—É–∂–∞–µ–º –∑–∞–∫–∞–∑—ã –∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É
                         this.loadOrders();
                         this.loadStats();

                         // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –µ—Å–ª–∏ –µ—Å—Ç—å –Ω–æ–≤—ã–µ –∑–∞–∫–∞–∑—ã
                         if (data.data.new_orders_count > 0) {
                             this.showNotification(`–ü–æ–ª—É—á–µ–Ω–æ ${data.data.new_orders_count} –Ω–æ–≤—ã—Ö –∑–∞–∫–∞–∑–æ–≤`);
                         }
                     }

                     // –û–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ–º —Å–æ–±—ã—Ç–∏–µ –ø—Ä–æ–≥—Ä–µ—Å—Å–∞ —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏–∏
                     if (data.event === 'sync.progress') {
                         console.log('üîÑ Sync progress:', data.data);

                         const syncData = data.data;
                         this.syncStatus = syncData.status;
                         this.syncMessage = syncData.message;
                         this.syncProgress = syncData.progress || 0;

                         if (syncData.status === 'started' || syncData.status === 'progress') {
                             this.syncInProgress = true;
                         } else if (syncData.status === 'completed') {
                             this.syncInProgress = false;
                             this.syncProgress = 100;
                             // –ó–∞–∫–∞–∑—ã –∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ —É–∂–µ –æ–±–Ω–æ–≤—è—Ç—Å—è —á–µ—Ä–µ–∑ orders.updated —Å–æ–±—ã—Ç–∏–µ
                         } else if (syncData.status === 'error') {
                             this.syncInProgress = false;
                             this.syncProgress = 0;
                             this.showNotification('–û—à–∏–±–∫–∞ —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏–∏: ' + syncData.message);
                         }
                     }

                     // –û–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ–º —Å–æ–±—ã—Ç–∏–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö (live monitoring)
                     if (data.event === 'data.changed') {
                         console.log('üîÑ Data changed:', data.data);

                         const changeData = data.data;
                         this.lastDataChange = changeData;
                         this.liveMonitoringActive = true;

                         // –î–æ–±–∞–≤–ª—è–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –æ –∏–∑–º–µ–Ω–µ–Ω–∏–∏
                         this.dataChangeNotifications.push({
                             id: Date.now(),
                             type: changeData.data_type,
                             changeType: changeData.change_type,
                             count: changeData.affected_count,
                             timestamp: changeData.timestamp,
                         });

                         // –£–¥–∞–ª—è–µ–º —Å—Ç–∞—Ä—ã–µ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏—è (—Ö—Ä–∞–Ω–∏–º –ø–æ—Å–ª–µ–¥–Ω–∏–µ 5)
                         if (this.dataChangeNotifications.length > 5) {
                             this.dataChangeNotifications.shift();
                         }

                         // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –æ–±–Ω–æ–≤–ª—è–µ–º –¥–∞–Ω–Ω—ã–µ –ø—Ä–∏ –∏–∑–º–µ–Ω–µ–Ω–∏—è—Ö
                         if (changeData.data_type === 'orders') {
                             this.loadOrders();
                             this.loadStats();

                             const message = changeData.change_type === 'created'
                                 ? `–î–æ–±–∞–≤–ª–µ–Ω–æ ${changeData.affected_count} –Ω–æ–≤—ã—Ö –∑–∞–∫–∞–∑–æ–≤`
                                 : `–û–±–Ω–æ–≤–ª–µ–Ω–æ ${changeData.affected_count} –∑–∞–∫–∞–∑–æ–≤`;

                             this.showNotification(message);
                         }
                     }
                 };

                 this.wsConnection.onerror = (error) => {
                     console.error('‚ùå WebSocket error:', error);
                     this.wsConnected = false;
                 };

                 this.wsConnection.onclose = () => {
                     console.log('üîå WebSocket disconnected');
                     this.wsConnected = false;

                     // –ü–µ—Ä–µ–ø–æ–¥–∫–ª—é—á–∞–µ–º—Å—è —á–µ—Ä–µ–∑ 5 —Å–µ–∫—É–Ω–¥
                     setTimeout(() => this.connectWebSocket(), 5000);
                 };
             } catch (error) {
                 console.error('Failed to connect WebSocket:', error);
                 this.wsConnected = false;
             }
         },
         showNotification(message) {
             // –ü—Ä–æ—Å—Ç–æ–µ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ (–º–æ–∂–Ω–æ –∑–∞–º–µ–Ω–∏—Ç—å –Ω–∞ toast notification)
             if ('Notification' in window && Notification.permission === 'granted') {
                 new Notification('SellerMind AI', {
                     body: message,
                     icon: '/favicon.ico'
                 });
             }
         },
         async loadOrders() {
             this.loading = true;
             let url = '/api/marketplace/orders?company_id=' + this.$store.auth.currentCompany.id + '&marketplace_account_id={{ $accountId }}';
             if (this.statusFilter) url += '&status=' + this.statusFilter;
             if (this.dateFrom) url += '&from=' + this.dateFrom;
             if (this.dateTo) url += '&to=' + this.dateTo;

             const res = await fetch(url, { headers: this.getAuthHeaders() });
             if (res.ok) {
                 const data = await res.json();
                 this.orders = data.orders || [];
             } else if (res.status === 401) {
                 window.location.href = '/login';
             }
             this.loading = false;
         },
         async loadStats() {
             let url = '/api/marketplace/orders/stats?company_id=' + this.$store.auth.currentCompany.id + '&marketplace_account_id={{ $accountId }}';
             if (this.dateFrom) url += '&from=' + this.dateFrom;
             if (this.dateTo) url += '&to=' + this.dateTo;

             const res = await fetch(url, { headers: this.getAuthHeaders() });
             if (res.ok) {
                 this.stats = await res.json();
             }
         },
         async viewOrder(order) {
             this.selectedOrder = order;
             this.showOrderModal = true;
             this.showRaw = false;
         },
         formatMoney(amount, currency = 'RUB') {
             return new Intl.NumberFormat('ru-RU', {
                 style: 'currency',
                 currency: currency
             }).format(amount || 0);
         },
         formatPrice(kopecks) {
             // WB —Ü–µ–Ω—ã –ø—Ä–∏—Ö–æ–¥—è—Ç –≤ –∫–æ–ø–µ–π–∫–∞—Ö
             return this.formatMoney((kopecks || 0) / 100);
         },
         formatDateTime(dateString) {
             if (!dateString) return '-';
             return new Date(dateString).toLocaleString('ru-RU', {
                 year: 'numeric',
                 month: '2-digit',
                 day: '2-digit',
                 hour: '2-digit',
                 minute: '2-digit'
             });
         },
         getDeliveryTypeName(type) {
             const types = {
                 'fbs': 'FBS (—Å–æ —Å–∫–ª–∞–¥–∞ –ø—Ä–æ–¥–∞–≤—Ü–∞)',
                 'fbo': 'FBO (—Å–æ —Å–∫–ª–∞–¥–∞ WB)',
                 'dbs': 'DBS (–¥–æ—Å—Ç–∞–≤–∫–∞ –ø—Ä–æ–¥–∞–≤—Ü–æ–º)',
                 'edbs': 'eDBS (—ç–∫—Å–ø—Ä–µ—Å—Å –¥–æ—Å—Ç–∞–≤–∫–∞)'
             };
             return types[type] || type;
         },
         getWbProductImageUrl(nmId, size = 'tm') {
             // WB CDN pattern: https://basket-{XX}.wbbasket.ru/vol{VOL}/part{PART}/{nmId}/images/tm/1.jpg
             // Sizes: tm (thumbnail ~196x260), c246x328, c516x688, big
             if (!nmId) return null;
             const nmIdStr = String(nmId);
             const vol = Math.floor(nmId / 100000);
             const part = Math.floor(nmId / 1000);
             // basket-00 –Ω–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç, –∏—Å–ø–æ–ª—å–∑—É–µ–º 16 –≤–º–µ—Å—Ç–æ 0
             const basketNum = ((nmId % 16) || 16).toString().padStart(2, '0');
             return `https://basket-${basketNum}.wbbasket.ru/vol${vol}/part${part}/${nmId}/images/${size}/1.jpg`;
         },
         toggleSupply(supplyId) {
             this.expandedSupplies[supplyId] = !this.expandedSupplies[supplyId];
         },
         isSupplyExpanded(supplyId) {
             return this.expandedSupplies[supplyId] || false;
         },
         async switchTab(tab) {
             this.activeTab = tab;
             // –£—Å—Ç–∞–Ω–æ–≤–∏—Ç—å —Ñ–∏–ª—å—Ç—Ä —Å—Ç–∞—Ç—É—Å–∞ –Ω–∞ –æ—Å–Ω–æ–≤–µ –≤—ã–±—Ä–∞–Ω–Ω–æ–π –≤–∫–ª–∞–¥–∫–∏
             switch(tab) {
                 case 'new':
                     this.statusFilter = '';
                     break;
                 case 'in_assembly':
                     this.statusFilter = '';
                     break;
                 case 'in_delivery':
                     // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø—É—Å—Ç–æ, –Ω–æ –≥—Ä—É–∑–∏–º –≤—Å–µ (–¥–ª—è –∞—Ä—Ö–∏–≤–∞ –∏—Å–ø–æ–ª—å–∑—É–µ–º in_delivery)
                     this.statusFilter = '';
                     break;
                 case 'completed':
                     // –ù—É–∂–Ω—ã –∏ completed, –∏ in_delivery ‚Äî –≥—Ä—É–∑–∏–º –≤—Å–µ –∏ —Ñ–∏–ª—å—Ç—Ä—É–µ–º –Ω–∞ –∫–ª–∏–µ–Ω—Ç–µ
                     this.statusFilter = '';
                     break;
                 case 'cancelled':
                     this.statusFilter = '';
                     break;
                 default:
                     this.statusFilter = '';
             }
             await this.loadOrders();
             await this.loadStats();
         },
         switchDeliveryType(type) {
             this.deliveryTypeFilter = type;
         },
         async triggerSync() {
             if (this.syncInProgress) {
                 console.log('Sync already in progress');
                 return;
             }

             this.syncInProgress = true;
             this.syncProgress = 0;
             this.syncMessage = '–ó–∞–ø—É—Å–∫ —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏–∏...';
             this.syncStatus = 'started';

             try {
                 const url = '/api/marketplace/accounts/{{ $accountId }}/sync/orders';
                 const res = await fetch(url, {
                     method: 'POST',
                     headers: {
                         ...this.getAuthHeaders(),
                         'Content-Type': 'application/json'
                     },
                     body: JSON.stringify({
                         async: false  // –°–∏–Ω—Ö—Ä–æ–Ω–Ω—ã–π —Ä–µ–∂–∏–º –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –ø—Ä–æ–≥—Ä–µ—Å—Å–∞ —á–µ—Ä–µ–∑ WebSocket
                     })
                 });

                 const data = await res.json();

                 if (!res.ok) {
                     throw new Error(data.message || '–û—à–∏–±–∫–∞ —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏–∏');
                 }

                 console.log('Sync response:', data);
                 // –ü—Ä–æ–≥—Ä–µ—Å—Å –∏ –∑–∞–≤–µ—Ä—à–µ–Ω–∏–µ –±—É–¥—É—Ç –æ–±—Ä–∞–±–æ—Ç–∞–Ω—ã —á–µ—Ä–µ–∑ WebSocket —Å–æ–±—ã—Ç–∏—è
             } catch (error) {
                 console.error('Sync error:', error);
                 this.syncInProgress = false;
                 this.syncProgress = 0;
                 this.syncMessage = '–û—à–∏–±–∫–∞: ' + error.message;
                 this.syncStatus = 'error';
                 this.showNotification('–û—à–∏–±–∫–∞ —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏–∏: ' + error.message);
             }
         },
         async toggleLiveMonitoring() {
             if (this.liveMonitoringEnabled) {
                 await this.stopLiveMonitoring();
             } else {
                 await this.startLiveMonitoring();
             }
         },
         async startLiveMonitoring() {
             try {
                 const url = '/api/marketplace/accounts/{{ $accountId }}/monitoring/start';
                 const res = await fetch(url, {
                     method: 'POST',
                     headers: this.getAuthHeaders()
                 });

                 const data = await res.json();

                 if (res.ok) {
                     this.liveMonitoringEnabled = true;
                     this.showNotification('Live-–º–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥ –∑–∞–ø—É—â–µ–Ω');
                     console.log('‚úÖ Live monitoring started');
                 } else {
                     throw new Error(data.message || '–û—à–∏–±–∫–∞ –∑–∞–ø—É—Å–∫–∞ –º–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥–∞');
                 }
             } catch (error) {
                 console.error('Failed to start monitoring:', error);
                 this.showNotification('–û—à–∏–±–∫–∞ –∑–∞–ø—É—Å–∫–∞ –º–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥–∞: ' + error.message);
             }
         },
         async stopLiveMonitoring() {
             try {
                 const url = '/api/marketplace/accounts/{{ $accountId }}/monitoring/stop';
                 const res = await fetch(url, {
                     method: 'POST',
                     headers: this.getAuthHeaders()
                 });

                 const data = await res.json();

                 if (res.ok) {
                     this.liveMonitoringEnabled = false;
                     this.liveMonitoringActive = false;
                     this.showNotification('Live-–º–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥ –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω');
                     console.log('‚èπÔ∏è Live monitoring stopped');
                 } else {
                     throw new Error(data.message || '–û—à–∏–±–∫–∞ –æ—Å—Ç–∞–Ω–æ–≤–∫–∏ –º–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥–∞');
                 }
             } catch (error) {
                 console.error('Failed to stop monitoring:', error);
                 this.showNotification('–û—à–∏–±–∫–∞ –æ—Å—Ç–∞–Ω–æ–≤–∫–∏ –º–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥–∞: ' + error.message);
             }
         },
         normalizeStatus(order) {
             if (!order) return null;
             const fromOrder = order.status || order.wb_status_group;
             if (fromOrder) return fromOrder;
             const supplier = (order.wb_supplier_status || '').toLowerCase();
             if (supplier) {
                 const map = {
                     'new': 'new',
                     'confirm': 'in_assembly',
                     'complete': 'completed',
                     'receive': 'completed',
                     'cancel': 'cancelled',
                     'reject': 'cancelled'
                 };
                 if (map[supplier]) return map[supplier];
             }
             const wb = (order.wb_status || '').toLowerCase();
             if (wb) {
                 const map = {
                     'waiting': 'new',
                     'sorted': 'in_assembly',
                     'sold': 'in_assembly',
                     'on_way_to_client': 'in_delivery',
                     'on_way_from_client': 'in_delivery',
                     'delivered': 'completed',
                     'canceled': 'cancelled',
                     'canceled_by_client': 'cancelled',
                     'defect': 'cancelled'
                 };
                 if (map[wb]) return map[wb];
             }
             return null;
         },
         get filteredOrders() {
             const statusMap = {
                 'new': ['new'],
                 'in_assembly': ['in_assembly'],
                 'in_delivery': [], // –ø—É—Å—Ç–æ –Ω–∞ –æ—Ç–¥–µ–ª—å–Ω–æ–π –≤–∫–ª–∞–¥–∫–µ
                 'completed': ['completed', 'in_delivery'],
                 'cancelled': ['cancelled'],
             };
             const allowedStatuses = statusMap[this.activeTab] ?? null;

             return this.orders
                 .filter(order => {
                     if (this.deliveryTypeFilter === 'all') return true;
                     return (order.wb_delivery_type || '').toLowerCase() === this.deliveryTypeFilter;
                 })
                 .filter(order => {
                     if (!this.searchQuery) return true;
                     const query = this.searchQuery.toLowerCase();
                     const payload = order.raw_payload || {};
                     return order.external_order_id?.toString().includes(query) ||
                         payload.article?.toLowerCase().includes(query) ||
                         payload.orderUid?.toLowerCase().includes(query);
                 })
                 .filter(order => {
                     if (allowedStatuses === null) return true;
                     if (allowedStatuses.length === 0) return false;
                     const st = this.normalizeStatus(order);
                     if (!st) return false;
                     return allowedStatuses.includes(st);
                 });
         },
         get tabOrders() {
             return this.filteredOrders;
         },
         get filteredStats() {
             const filtered = this.tabOrders;
             const byStatus = {
                 new: 0,
                 in_assembly: 0,
                 in_delivery: 0,
                 completed: 0,
                 cancelled: 0
             };

             let amount = 0;
             filtered.forEach(order => {
                 const st = this.normalizeStatus(order);
                 if (st && byStatus.hasOwnProperty(st)) {
                     byStatus[st] += 1;
                 }
                 const priceKopecks = order.wb_final_price ?? (order.total_amount ? Math.round(order.total_amount * 100) : 0);
                 amount += priceKopecks;
             });

             return {
                 total_orders: filtered.length,
                 total_amount: amount / 100,
                 by_status: byStatus
             };
         },
         get displayStats() {
             // –î–ª—è –≤–∫–ª–∞–¥–æ–∫ FBS/DBS/eDBS –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –¥–∞–Ω–Ω—ã–µ –æ—Ç—Ñ–∏–ª—å—Ç—Ä–æ–≤–∞–Ω–Ω—ã—Ö –∑–∞–∫–∞–∑–æ–≤
             return this.filteredStats;
         },
         get groupedBySupply() {
             // –ì—Ä—É–ø–ø–∏—Ä—É–µ–º –∑–∞–∫–∞–∑—ã –ø–æ supply_id –¥–ª—è –≤–∫–ª–∞–¥–∫–∏ –ù–∞ —Å–±–æ—Ä–∫–µ
             const groups = {
                 withSupply: {},  // { supplyId: [orders] }
                 withoutSupply: [] // –∑–∞–∫–∞–∑—ã –±–µ–∑ –ø–æ—Å—Ç–∞–≤–∫–∏
