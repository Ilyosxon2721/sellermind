APP_NAME="SellerMind AI"
APP_ENV=production
# CRITICAL: Generate with: php artisan key:generate
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

APP_LOCALE=ru
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ru_RU

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sellermind_ai
DB_USERNAME=sellermind_user
DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=your-domain.com

# Filesystem & Queue
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@sellermind.ai"
MAIL_FROM_NAME="${APP_NAME}"

# OpenAI API Configuration
OPENAI_API_KEY=
OPENAI_TEXT_MODEL=gpt-4o-mini
OPENAI_TEXT_PREMIUM_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o
OPENAI_IMAGE_MODEL=dall-e-3

# Marketplace API Keys
WB_API_KEY=
OZON_CLIENT_ID=
OZON_API_KEY=
UZUM_API_KEY=
YM_API_KEY=
YM_CAMPAIGN_ID=

# Telegram Bot Configuration (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=
TELEGRAM_BOT_USERNAME=

# Broadcasting / WebSocket (Laravel Reverb)
# For VPS: Use 'reverb' (recommended with WebSocket) or 'redis'
# For cPanel: Use 'database' or 'redis' (WebSocket not available)
BROADCAST_CONNECTION=reverb

# Laravel Reverb WebSocket Server
REVERB_APP_ID=sellermind

# CRITICAL: Generate secure random strings (32+ chars)
# Example: openssl rand -base64 32
REVERB_APP_KEY=
REVERB_APP_SECRET=

# Development Configuration
REVERB_HOST=localhost          # Use your-domain.com in production
REVERB_PORT=8090               # Client connection port (443 in production with Nginx proxy)
REVERB_SERVER_HOST=0.0.0.0     # Bind to all interfaces
REVERB_SERVER_PORT=8090        # Internal server port (8080 in production)
REVERB_SCHEME=https            # Always https in production

# Production Example (through Nginx proxy):
# REVERB_HOST=your-domain.com
# REVERB_PORT=443
# REVERB_SERVER_PORT=8080
# REVERB_SCHEME=https

# Pusher Protocol Configuration (Reverb uses Pusher protocol)
PUSHER_APP_ID=${REVERB_APP_ID}
PUSHER_APP_KEY=${REVERB_APP_KEY}
PUSHER_APP_SECRET=${REVERB_APP_SECRET}
PUSHER_HOST=${REVERB_HOST}
PUSHER_PORT=${REVERB_SERVER_PORT}
PUSHER_SCHEME=${REVERB_SCHEME}
PUSHER_APP_CLUSTER=mt1

# Vite Frontend Configuration
VITE_APP_NAME="${APP_NAME}"

# Vite Broadcasting Variables (Reverb WebSocket)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Legacy Pusher compatibility (if using Laravel Echo instead of native WebSocket)
VITE_PUSHER_APP_KEY="${REVERB_APP_KEY}"
VITE_PUSHER_HOST="${REVERB_HOST}"
VITE_PUSHER_PORT="${REVERB_PORT}"
VITE_PUSHER_SCHEME="${REVERB_SCHEME}"

# HTTP Polling Configuration (для real-time обновлений без WebSocket)
POLLING_ENABLED=true
POLLING_INTERVAL_ORDERS=15
POLLING_INTERVAL_SYNC=10
POLLING_INTERVAL_NOTIFICATIONS=20
POLLING_INTERVAL_DASHBOARD=30
POLLING_INTERVAL_SUPPLIES=20
POLLING_CACHE_TTL=5

# Sentry Error Monitoring (Optional but recommended for production)
# Get your DSN from https://sentry.io
SENTRY_LARAVEL_DSN=
SENTRY_ENVIRONMENT=${APP_ENV}
SENTRY_SAMPLE_RATE=0.2
SENTRY_TRACES_SAMPLE_RATE=0.1

# CORS Configuration
# Comma-separated list of allowed origins, or use '*' for all (not recommended in production)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
